<p id="notice"><%= notice %></p>

<h1>Listing Studentss</h1>

<table>
  <thead>
    <tr>
      <th>Student name</th>
      <th>Tracking ID</th>
      <th>Father name</th>
      <th>DOB</th>
      <th>SEX</th>
      <th>City</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Mailing Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.tracking_id %></td>
        <td><%= student.father_name %></td>
        <td><%= student.DOB %></td>
        <td><%= student.SEX%></td>
        <td><%= student.city%></td>
        <td><%= student.email%></td>
        <td><%= student.phone_number%></td>
        <td><%= student.mailing_address%></td>
        <td><%= link_to 'Show', student,:style => "margin-right: 5px;" %></td>
        <td><%= link_to ' Edit ', edit_student_path(student),:style => "margin-right: 5px;" %></td>
        <td><%= link_to ' Destroy ', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

