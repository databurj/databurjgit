<% if @link == "instructor_profile" %>
  <% if @instructor %>
    <div class = "animated fadeIn">
      <div id="dashboard-con">
        <div>
          <div class="dashboard-left-cell">
            <div class="admin-content-con">
              <header class="clearfix">
                <strong><h3 class="pull-left page_title"><%= @instructor.instructor_name %>'s details</h3></strong>
                <div class = "divider pull-right">
                <%= link_to "All Instructors", users_path( :admin => "instructors_view" ), :class => "btn btn-xs btn-primary pull-right", :role => "button" %>
              </header>
