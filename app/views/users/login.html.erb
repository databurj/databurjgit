<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<title>DataBurj Sign In</title>

	<!-- Google Fonts -->
	<link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700|Lato:400,100,300,700,900' rel='stylesheet' type='text/css'>

	<!--<link rel="stylesheet" href="css/animate.css">-->
	<!-- Custom Stylesheet -->
	<!--<link rel="stylesheet" href="css/style.css">-->

	<!--<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>-->
</head>

<body background = "3d.jpg">
	<center>
	<div class="container">
		<div class="top">
			<h1 id="title"><span id="logo">Data<span><b>Burj</b></span></span></h1>
		</div>
		
		<div class="login-box animated rubberBand">
			<div class="box-header">
				<h2>Log In</h2>
			</div>
            <%= form_tag(:action => 'attempt_login' ) do %>
            
            <table>
            	<center>
                <tr>
                	
                    <label for="username">Username</label>
					<br/>
					
                 	<!--#<br></br>-->
                 	<!--<%= label_tag(:username) %>-->
                    <center><%= text_field_tag(:username)  %></center>
                    
                </tr>
                <tr>
                	<label for="password">Password</label>
					<br/>
					<center><%= password_field_tag(:password) %></center>
				</tr>
				

                    <center class = "vakhri"><%= submit_tag("Log In") %></center>
                </center>
            </table>
            
            <% end %>
            <% if flash[:notice] %>
    			<div><font color = "#1ab394"><%= flash[:notice] %></font></div>
  			<% end %>


			<!--<a href="#"><p class="small">Forgot your password?</p></a>-->
			
		</div>
		
		</div>
	</center>
</body>

<script>
	$(document).ready(function () {
    	$('#logo').addClass('animated swing');
    	$("input:text:visible:first").focus();
	});
	$('#username').focus(function() {
		$('label[for="username"]').addClass('selected');
	});
	$('#username').blur(function() {
		$('label[for="username"]').removeClass('selected');
	});
	$('#password').focus(function() {
		$('label[for="password"]').addClass('selected');
	});
	$('#password').blur(function() {
		$('label[for="password"]').removeClass('selected');
	});
</script>

</html>
