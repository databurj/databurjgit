              <strong>Secondary Phone number:</strong>&nbsp;&nbsp;&nbsp;<%= @student.secondary_phone_number %><hr/>
              <strong>Mailing Address:</strong>&nbsp;&nbsp;&nbsp;<%= @student.mailing_address %><hr/>
              <strong>DataBurj Username:</strong>&nbsp;&nbsp;&nbsp;<%= @student.username %>
      </div>
    </div>
  </div>

</div>
  <% end %>

<% end %>
<% if @link == "std_settings" %>
<div id="content">
	            <header class="clearfix">
	              <b><h3 class="page_title">Change your password</h3></b>
	            </header>

	            <div class="content-inner">
	              <div class="row">
	              	<div class="col-md-6">
	              		<form>
	              			<div class="settings-row">
	              				<div class="form-group">
	              						<%= bootstrap_form_for(@student) do |f| %>
	              					<%= f.password_field :password, label: "Current Password", :required => true %>
	              				
	              				</div>
	              				<div class="form-group">
	              				  <%= f.password_field :password, label: "New Password", :required => true %>
	              				</div>
	              				<div class="form-group">
	              				  <%= f.password_field :password, label: "Confirm New Password", :required => true %>
	              				</div>
	              					<% end %>
	              			</div>
	              			<button type="submit" class="btn btn-primary">Save Changes</button>
	              		</form>
	              	</div>
	              </div>
	            </div>

<% end %>
