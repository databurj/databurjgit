<p id="notice"><%= notice %></p>

<h1>Listing Instructors</h1>

<table>
  <thead>
    <tr>
      <th>Instructor id</th>
      <th>Name</th>
      <th>Email</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <td><%= instructor.instructor_id %></td>
        <td><%= instructor.instructor_name %></td>
        <td><%= instructor.email %></td>
        <td><%= instructor.subject_name %></td>
        <td><%= link_to 'Show', instructor,:style => "margin-right: 5px;" %></td>
        <td><%= link_to 'Edit', edit_instructor_path(instructor),:style => "margin-right: 5px;" %></td>
        <td><%= link_to 'Destroy', instructor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Instructor', new_instructor_path %>
